@model IEnumerable<WebBanHang.Models.Product>

<div class="row">
    <!-- Sidebar danh mục -->
    <div class="col-md-3">
        <h4>Danh mục</h4>
        <ul class="list-group">
            @foreach (var cat in ViewBag.CategoryList)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="@Url.Action("Index", "Product", new { area = "Customer", categoryId = cat.Id })">@cat.Name</a>
                    <span class="badge bg-secondary rounded-pill">@cat.ProductCount</span>
                </li>
            }
        </ul>
    </div>

    <!-- Nội dung sản phẩm -->
    <div class="col-md-9">
        <h3>@ViewBag.Title</h3>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="~/@item.ImageUrl" class="card-img-top" style="height:200px;object-fit:cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text text-danger">@String.Format("{0:N0} ₫", item.Price)</p>
                            <a href="#" class="btn btn-sm btn-outline-info">Chi tiết</a>
                            <a href="#" class="btn btn-sm btn-success">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
